<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Base Datos CRUD </display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
    
   <servlet>
        <servlet-name>CompraControlador</servlet-name>
        <servlet-class>Controlador.CompraControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompradoresControlador</servlet-name>
        <servlet-class>Controlador.CompradoresControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GaleriaControl</servlet-name>
        <servlet-class>Controlador.GaleriaControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArtistaControl</servlet-name>
        <servlet-class>Controlador.ArtistaControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompraControlador</servlet-name>
        <url-pattern>/CompraControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompradoresControlador</servlet-name>
        <url-pattern>/CompradoresControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GaleriaControl</servlet-name>
        <url-pattern>/GaleriaControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArtistaControl</servlet-name>
        <url-pattern>/ArtistaControl</url-pattern>
    </servlet-mapping>
</web-app>
